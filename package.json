{
  "name": "vanil",
  "publishConfig": {
    "access": "public"
  },
  "bin": {
    "vanil": "./dist/src/index.js"
  },
  "types": "./dist/src/@types/index.d.js",
  "version": "0.0.53",
  "homepage": "https://vanil.build",
  "documentationUrl": "https://vanil.build/docs",
  "repository": {
    "url": "git+https://github.com/kyr0/vanil.git",
    "type": "git"
  },
  "bugs": {
    "url": "https://github.com/kyr0/vanil/issues"
  },
  "keywords": [
    "TSX",
    "JSX",
    "SSG",
    "HTML",
    "Astro",
    "Markdown",
    "compiler",
    "TypeScript",
    "zero-config",
    "pragmatic",
    "fast",
    "efficient"
  ],
  "description": "Vanilla TSX/JSX/HTML/Markdown/CSS compiler using the Astro file format - pragmatic, zero-config static-site generator (SSG)",
  "scripts": {
    "release:patch": "ts-node ./scripts/release.ts patch",
    "release:minor": "ts-node ./scripts/release.ts minor",
    "release:major": "ts-node ./scripts/release.ts major",
    "start:dev": "ts-node-dev --rs --ignore-watch=./examples --watch=./src/** --respawn --transpile-only ./src/vanil.ts",
    "start": "ts-node ./src/vanil.ts",
    "test:init": "ts-node ./src/vanil.ts init",
    "build": "tsc"
  },
  "author": "Aron Homberg <info@aron-homberg.de>",
  "license": "MIT",
  "engines": {
    "node": "^14.13.1 || >=16.0.0",
    "npm": ">=6.14.0"
  },
  "dependencies": {
    "autoprefixer": "^10.4.0",
    "chokidar": "^3.5.2",
    "crc-32": "^1.2.0",
    "cross-fetch": "^3.1.4",
    "cross-spawn": "^7.0.3",
    "csstype": "^3.0.10",
    "dotenv": "^10.0.0",
    "esbuild": "^0.14.3",
    "express": "^4.17.1",
    "fast-glob": "^3.2.7",
    "fs-extra": "^10.0.0",
    "html-minifier-terser": "^6.1.0",
    "inquirer": "^8.2.0",
    "js2xmlparser": "^4.0.2",
    "json5": "^2.2.0",
    "kleur": "^4.1.4",
    "linkedom": "^0.13.0",
    "marked": "^4.0.6",
    "node-resolve": "^1.3.4",
    "postcss": "^8.3.11",
    "postcss-import-sync2": "^1.2.0",
    "postcss-nested": "^5.0.6",
    "prettier": "^2.4.1",
    "resolve": "^1.20.0",
    "semver": "^7.3.5",
    "shelljs": "^0.8.4",
    "ts-node": "^10.4.0",
    "typescript": "^4.4.4",
    "validate-npm-package-name": "^3.0.0",
    "ws": "^8.2.3",
    "yargs-parser": "^20.2.9"
  },
  "devDependencies": {
    "@types/cross-spawn": "^6.0.2",
    "@types/express": "^4.17.13",
    "@types/inquirer": "^8.1.3",
    "@types/node": "^16.11.7",
    "@types/prettier": "^2.4.2",
    "@types/semver": "^7.3.9",
    "@types/shelljs": "^0.8.9",
    "@types/ws": "^8.2.0",
    "@types/yargs-parser": "^20.2.1",
    "ts-node-dev": "^1.1.8"
  }
}
