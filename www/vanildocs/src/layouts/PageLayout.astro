---
import Header from "../components/Header.astro"
import Footer from "../components/Footer.astro"
import { props } from "vanil"
import { mainColor, brandPrimaryColor, brandSecondaryColor } from "../config/ci"
---
<html>
    <head> 
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

        <title>{ props.title || "VanilDocs" }</title>

        <!-- ./hooks/onStart.ts generates this one in dist folder -->
        <link href="/index.css" rel="stylesheet" />

        <!-- automatically copied to dist folder because it's located in ./public folder -->
        <script src="/js/bootstrap/bootstrap.bundle.min.js"></script>
        
        <!-- map brand / CI colors to CSS custom properties to bridge JS to CSS -->
        <style lang="scss">    
            :root {
                --bs-dark: ${mainColor} !important;
                --bs-body-color: ${mainColor};
                --bs-primary: ${brandPrimaryColor} !important;
                --bs-secondary: ${brandSecondaryColor} !important;
                --main-bg-color: ${brandSecondaryColor};
                --main-color: ${mainColor};
                --brand-color: ${brandPrimaryColor};
            }
        </style>

        <link href="./PageLayout.scss" rel="stylesheet" />
    </head>
    <body>
        <Header />

        <main class="content">
            <slot />
        </main>

        <Footer />
    </body>
</html>